    		}
		return count;
            } */
    
    //**********************************************************
    
    //search for the item in the list.
    
    public boolean search(int data)
    {
    	NodeOrderedList temp=head;
        for(int i=0; i<size(); i++)
        {

            if(temp.data == data)
            {
                return true;
            }else {
                temp = temp.next;
                if( temp.data != data) {
                	return false;
                }
            }
        }
        return false;
        
     }
    
 //*****************************************************************
    
    public int index(int data) {
    	NodeOrderedList temp = head;
    	for(int i = 0 ; i < size() ; i++) {
    		if(temp.data == data) {
    			return i ;
    		}
    		temp = temp.next;
    	}
		return -1;
    	
    }
    
 //*******************************************************
    
    
   /* public int pop(int index)
    {
        if(index==0)
