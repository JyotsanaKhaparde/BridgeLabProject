package com.bridgelabz.stringandarrays;

import utility.Utility;

/**
* Purpose:program to perform insertion sort and give sorted number.
 *
 *  @author Jyotsana Khaparde 
 *  @version 1.0
 *  @since   08-12-2018 
 */
public class InsertionSort {
	public static void main(String[] args) {
		int temp;
		
		//take ant number from user till want you want to display sorted value
		
		System.out.println("Enter any number : ");
		int n = Utility.getInt();
		int array[] = new int[n];
		
		//put n number in array list
		
		for(int i = 0 ; i<n ; i++) {
			 array[i]=Utility.getInt();
		}
		
		//swap if any number is less then the any of previous number.
		
		for(int i = 1; i < array.length ; i++) {
			for(int j = 0 ; j < i-1 ; j++) {
				if(array[i] < array[j]) {
					temp = array[j];
					array[j]= array[i];
					array[i]= temp;
				}  
			}
		}
		
		//sorted list of number
		
		for(int i = 0 ; i < array.length ; i++) {
			System.out.println(array[i]);
		}
		
	}

}
